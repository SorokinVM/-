// выгрузка
Файл = Новый ЗаписьXML;
Файл.ОткрытьФайл("C:\Сорокин В\Объект.xml");
ЗаписатьXML(Файл, Объект);
Файл.Закрыть();


// загрузка
ДанныеXML = Новый ЧтениеXML;
ДанныеXML.ОткрытьФайл("C:\Сорокин В\Объект.xml");
Пока ДанныеXML.Прочитать() Цикл
     Если ВозможностьЧтенияXML(ДанныеXML) Тогда
         НовыйОбъект = ПрочитатьXML(ДанныеXML);
         НовыйОбъект.Записать();
     КонецЕсли;
КонецЦикла;
ДанныеXML.Закрыть();
